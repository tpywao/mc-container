root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

# 4 space indentation
[*.py]
indent_size = 4


[*.md]
trim_trailing_whitespace = false
